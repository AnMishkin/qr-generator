<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRCreator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1E2237</item>
        <item name="colorPrimaryVariant">#1E2237</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#1E2237</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#1E2237</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AdAttribution" parent="AppTheme.ActionBar.Transparent">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>

        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AppTheme.ActionBar.Transparent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

<!--        <item name="android:windowBackground">@drawable/splash_screen</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
<item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ScreenThemeQr" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Change the color of the text when it is not focused (hint) -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Change the color of the text when it is focused -->
        <item name="android:textColor">@color/white</item>
        <!-- Change the color of the search icon -->
        <item name="android:icon">@drawable/baseline_search_24</item>
<!--        <item name="queryBackground">@drawable/search_view_background</item>-->
    </style>

    <style name="toolbar">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:queryBackground">@color/white</item>
        <item name="android:suggestionRowLayout">@color/white</item>
        <item name="colorContainer">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foregroundTint">@color/white</item>
<item name="editTextColor">@color/white</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
    </style>




    <style name="Theme.MyThemeNew" parent="Theme.AppCompat">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="MySearch" parent="Widget.AppCompat.SearchView">

        <!-- Background for the search query section (e.g. EditText) -->
        <item name="queryBackground">@color/white</item>
        <!-- Background for the actions section (e.g. voice, submit) -->
        <item name="submitBackground">@color/white</item>

    </style>


    <style name="AppTheme.ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>